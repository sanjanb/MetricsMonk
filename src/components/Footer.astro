---
const currentYear = new Date().getFullYear();

const footerLinks = {
  services: [
    { label: 'Business Consulting', href: '/services/business-consulting' },
    { label: 'Content Creation', href: '/services/content-creation' },
    { label: 'Business Automation', href: '/services/business-automation' },
    { label: 'Web Development', href: '/services/web-development' },
    { label: 'Data Analytics', href: '/services/data-analytics' }
  ],
  company: [
    { label: 'About Us', href: '/about' },
    { label: 'Portfolio', href: '/portfolio' },
    { label: 'Blog', href: '/blog' },
    { label: 'Careers', href: '/careers' },
    { label: 'Contact', href: '/contact' }
  ],
  legal: [
    { label: 'Privacy Policy', href: '/privacy-policy' },
    { label: 'Terms of Service', href: '/terms-of-service' },
    { label: 'Cookie Policy', href: '/cookie-policy' }
  ]
};
---

<footer class="bg-secondary">
  <!-- Newsletter Section -->
  <div class="border-b border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="flex flex-col lg:flex-row items-center justify-between">
        <div class="text-center lg:text-left mb-8 lg:mb-0">
          <h3 class="text-2xl font-heading font-bold text-white mb-2">
            Stay Updated with Metrics<span class="text-primary">Monk</span>
          </h3>
          <p class="text-gray-400">
            Subscribe to our newsletter for the latest insights and updates
          </p>
        </div>
        <form class="flex w-full max-w-md">
          <input
            type="email"
            placeholder="Enter your email"
            class="flex-1 px-4 py-3 rounded-l-md focus:outline-none focus:ring-2 focus:ring-primary"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-primary text-white rounded-r-md hover:bg-primary/90 transition-colors"
          >
            Subscribe
          </button>
        </form>
      </div>
    </div>
  </div>

  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Company Info -->
      <div>
        <h3 class="text-2xl font-heading font-bold text-white mb-4">
          Metrics<span class="text-primary">Monk</span>
        </h3>
        <p class="text-gray-400 mb-6">
          Elevating Businesses with Expertise & Innovation
        </p>
        <div class="flex space-x-4">
          <a
            href="https://linkedin.com/in/metricsmonk"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-primary transition-colors"
            aria-label="LinkedIn"
          >
            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
            </svg>
          </a>
        </div>
      </div>

      <!-- Services Links -->
      <div>
        <h4 class="font-heading font-semibold text-white mb-6">Services</h4>
        <ul class="space-y-4">
          {footerLinks.services.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company Links -->
      <div>
        <h4 class="font-heading font-semibold text-white mb-6">Company</h4>
        <ul class="space-y-4">
          {footerLinks.company.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-primary transition-colors"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h4 class="font-heading font-semibold text-white mb-6">Contact</h4>
        <ul class="space-y-4">
          <li>
            <a
              href="mailto:metricsmonk@gmail.com"
              class="text-gray-400 hover:text-primary transition-colors flex items-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              metricsmonk@gmail.com
            </a>
          </li>
          <li>
            <a
              href="tel:+919535742673"
              class="text-gray-400 hover:text-primary transition-colors flex items-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              +91 95357 42673
            </a>
          </li>
          <li>
            <a
              href="tel:+918123539252"
              class="text-gray-400 hover:text-primary transition-colors flex items-center"
            >
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              +91 81235 39252
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          Â© {currentYear} Metrics Monk. All rights reserved.
        </p>
        <ul class="flex space-x-6">
          {footerLinks.legal.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-primary transition-colors text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</footer>